<h1>Create an Article</h1>

<%= form_for @article do |form| %> 
<!-- @article must be set to Article.new via "new" method in "articles_controller.rb" -->
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>